<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="vertical">

    <Button
        ohos:id="$+id:start_button"
        ohos:height="match_content"
        ohos:width="300vp"
        ohos:top_margin="10vp"
        ohos:padding="5vp"
        ohos:text="启动DDA服务"
        ohos:background_element="$graphic:select_button"
        ohos:text_alignment="center"
        ohos:text_size="18fp"/>
    <Button
        ohos:id="$+id:connect_button"
        ohos:height="match_content"
        ohos:width="300vp"
        ohos:top_margin="10vp"
        ohos:padding="5vp"
        ohos:text="getInfo"
        ohos:background_element="$graphic:select_button"
        ohos:text_alignment="center"
        ohos:text_size="18fp"/>
    <Text
        ohos:id="$+id:server_text"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:start_margin="10vp"
        ohos:padding="10vp"
        ohos:end_margin="10vp"
        ohos:text_alignment="center"
        ohos:text_size="16fp"/>
    <Text
        ohos:id="$+id:client_text"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:multiple_lines="true"
        ohos:padding="10vp"
        ohos:text_alignment="center"
        ohos:text_size="16fp"/>
